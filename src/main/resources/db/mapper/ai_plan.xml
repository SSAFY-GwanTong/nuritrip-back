<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.nuri_trip.domain.ai.repository.AiPlanRepository">

    <resultMap id="AiPlanBase" type="com.ssafy.nuri_trip.domain.ai.dto.AiPlan">
        <id property="id" column="id" />
        <result property="level" column="level" />
        <result property="area_code" column="areaCode" />
    </resultMap>

    <resultMap id="PossiblePlanBase" type="com.ssafy.nuri_trip.domain.ai.dto.PossibleAiPlan">
        <id property="ai_plan_id" column="aiPlanId" />
        <result property="day" column="day" />
    </resultMap>


    <resultMap id="AiPlanDetailBase" type="com.ssafy.nuri_trip.domain.ai.dto.AiPlanDetail">
        <id property="id" column="id" />
        <result property="day" column="day" />
        <result property="sequence" column="sequence" />
        <result property="ai_plan_id" column="aiPlanId" />
        <result property="attraction_id" column="attractionId" />
        <result property="content" column="content" />
    </resultMap>

    <select id="selectAllByLevelAndAreaCode" resultMap="AiPlanBase">

            `level` = #{level} and
            `area_code` = #{areaCode}
    </select>

