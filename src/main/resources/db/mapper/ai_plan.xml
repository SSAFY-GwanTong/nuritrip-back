    <select id="selectPossiblePlanListByLevelAndAreaCode" resultMap="PossiblePlanBase">
        SELECT
            b.ai_plan_id as ai_plan_id, max(b.day) day
        FROM
            ai_plan a right outer join ai_detail_plan b
        on a.id = b.ai_plan_id
        where
            a.`level` &gt;= #{level} and
            a.`area_code` = #{areaCode}
        group by ai_plan_id
    </select>

    <select id="selectAiPlanDetailListByAiPlanId" resultMap="AiPlanDetailBase">
        SELECT
            id, day, sequence, ai_plan_id, attraction_id, content
        FROM
            ai_detail_plan b
        where
            day &lt;=#{day} and
            ai_plan_id = #{aiPlanId}
    </select>
</mapper>