<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.nuri_trip.domain.attraction.mapper.AttractionMapper">

    <!-- ResultMap 정의 -->
    <resultMap id="AttractionResultMap" type="com.ssafy.nuri_trip.domain.attraction.dto.Attraction">
        <id property="contentId" column="content_id" />
        <result property="title" column="title" />
        <result property="address" column="address" />
        <result property="latitude" column="latitude" />
        <result property="longitude" column="longitude" />
    </resultMap>

    <!-- Attraction ID로 조회 -->
    <select id="getAttractionById" resultMap="AttractionResultMap" parameterType="int">
        SELECT 
            content_id, title, address, latitude, longitude
        FROM 
            attraction
        WHERE 
            content_id = #{attractionId}
    </select>

    <!-- Gugun Code로 Attraction 조회 -->
    <select id="getAttractionsByGugunCode" resultMap="AttractionResultMap" parameterType="int">
        SELECT 
            content_id, title, address, latitude, longitude
        FROM 
            attraction
        WHERE 
            gugun_code = #{gugunCode}
    </select>

    <!-- 특정 조건으로 Attraction 조회 -->
    <select id="getAttractionsByConditions" resultMap="AttractionResultMap" parameterType="map">
        SELECT 
            content_id, title, address, latitude, longitude
        FROM 
            attraction
        WHERE 
            1=1
            <if test="sido != null">
                AND sido_code = #{sido}
            </if>
            <if test="gugun != null">
                AND gugun_code = #{gugun}
            </if>
            <if test="content != null">
                AND content_type_id = #{content}
            </if>
    </select>

</mapper>
